<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="styles/style.css">
    <link rel="stylesheet" href="styles/header.css">
    <link rel="stylesheet" href="styles/clientes.css">
    <title>Capital Wise</title>
</head>

<body>
    <nav class="nav-bar"> 
        <!-- quitar el tabindex -->
        <a href="./index" tabindex=""><img class="nav-bar__logo" src="media/logo.webp" alt="Wise investors logo" /></a>
        <ul class="nav-bar__menu">
            <li class="nav-bar__menu-item">
                <a href="./clientes">Clientes</a>
            </li>
            <li class="nav-bar__menu-item"><a href="#">Proveedores</a></li>
            <li class="nav-bar__menu-item"><a href="#">articulos</a></li>
            <li class="nav-bar__menu-item"><a href="#">Entrada de diario</a></li>
        </ul>
    </nav>
    <section class="clients-container">
        <span class="create-client">
            <h1 class="clients-container__title">Clientes</h1>
            <a class="create-client__button" href="./crearClientes">Agrega clientes</a>
        </span>

        <table class="table">
            <thead class="table__head">
                <tr class="">
                    <th class="table__head-title">Razón social</th>
                    <th class="table__head-title">Nombre</th>
                    <th class="table__head-title">Telefono</th>
                    <th class="table__head-title">Correo</th>
                    <!-- <th>Acciones</th> -->
                </tr>
            </thead>
            <tbody>
                <tr class="table__row">
                    <td class="table__row-data">984894385</td>
                    <td class="table__row-data">Pepe Veráz</td>
                    <td class="table__row-data">849-806-5000</td>
                    <td class="table__row-data">pepeveras1234@gmail.com</td>
                    <!-- <td></td> -->
                </tr>
                <% clientes.forEach((cliente)=>{ %>
                    <tr class="table__row">
                        <td class="table__row-data"><%=cliente.razon_social%></td>
                        <td class="table__row-data"><%=cliente.client_name%></td>
                        <td class="table__row-data"><%=cliente.client_phone%></td>
                        <td class="table__row-data"><%=cliente.client_email%></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </section>
</body>

</html>