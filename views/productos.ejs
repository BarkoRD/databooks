<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="styles/style.css" />
    <link rel="stylesheet" href="styles/header.css" />
    <link rel="stylesheet" href="styles/clientes.css" />
    <title>Capital Wise</title>
  </head>
  <body>
    <%- include('header.ejs') %>
    <section class="clients-container">
      <span class="create-client">
        <h1 class="clients-container__title">Gastos</h1>
        <a class="create-client__button" href="./crearProductos"
          >Agregar Gasto</a
        >
      </span>
      <table class="table">
        <thead class="table__head">
          <tr class="">
            <th class="table__head-title">Etiqueta</th>
            <th class="table__head-title">Descripcion</th>
            <th class="table__head-title">Debito</th>
            <th class="table__head-title">Medio de Pago</th>
            <!-- <th class="table__head-title">Adjunto</th> -->
            <th class="table__head-title">Fecha</th>
          </tr>
        </thead>
        <tbody>
          <% tableitems.forEach((products)=> { %>
          <tr class="table__row">
            <td class="table__row-data"><%= products.product_name %></td>
            <td class="table__row-data"><%= products.product_description %></td>
            <td class="table__row-data"><%= products.cost %></td>
            <td class="table__row-data"><%= products.price %></td>
            <td class="table__row-data"><%= products.supplier_rnc %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </section>
  </body>
</html>
